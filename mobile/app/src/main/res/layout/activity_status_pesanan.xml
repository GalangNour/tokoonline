<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.toko.pesanan.StatusPesananActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Tokoonline.AppBarOverlay">

        <com.example.tokoonline.view.Navbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftIcon="@drawable/round_arrow_back"
            app:title="Status Pesanan" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            style="@style/customTabLayout"
            android:textAllCaps="false"
            app:tabBackground="@color/white"
            app:tabIndicatorColor="@color/colorPrimary500"
            app:tabSelectedTextColor="@color/colorPrimary500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>