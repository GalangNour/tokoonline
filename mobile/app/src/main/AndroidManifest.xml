            android:name=".view.activity.TokoProfileActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.PengirimanActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.AlamatFormActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.CheckoutActivity"
            android:exported="false" />
