            android:name=".view.activity.EditProfilActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.EditProfilFormActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.SettingAlamatActivity"
            android:exported="false" />
